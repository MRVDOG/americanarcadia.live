<div id="auth-user-button"></div>

<script>
  import { auth } from '../../lib/authStore'

  auth.subscribe((clerk) => {
    if (clerk !== null && clerk.isReady()) {
      const userButton = document.querySelector<HTMLDivElement>('#auth-user-button')!
      clerk.mountUserButton(userButton, {
        afterSignOutUrl: typeof window !== 'undefined' ? window.location.href : '/',
      })
    }
  })
</script>

<style>
  #auth-user-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }
</style>